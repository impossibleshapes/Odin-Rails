<h1>All tags</h1>

<ul>
	<% @tags.each do |tag| %>
		<li>
			<%= link_to tag.name, tag_path(tag) %>
			<%= link_to "Delete tag", tag_path(tag), method: :delete, data: {confirm: "Do you really want to delete this?"} %>
		</li>
	<% end %>
</ul>


<p><%= link_to "Back to articles", articles_path %></p>